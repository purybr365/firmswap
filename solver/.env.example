# ═══════════════════════════════════════════
#  FirmSwap Reference Solver Configuration
# ═══════════════════════════════════════════

# Solver identity (REQUIRED)
SOLVER_PRIVATE_KEY=                 # Private key for signing quotes and filling orders

# Chain
CHAIN_ID=100                        # 100 = Gnosis, 10200 = Chiado testnet
RPC_URL=https://rpc.gnosis.gateway.fm

# FirmSwap contract (REQUIRED)
FIRMSWAP_ADDRESS=

# HTTP server
PORT=3001
HOST=0.0.0.0

# API aggregator (for self-registration)
API_URL=http://localhost:3000
SOLVER_NAME="My FirmSwap Solver"

# Pricing
SPREAD_BPS=50                       # 0.5% spread over CEX mid price
MAX_ORDER_SIZE_USD=50000

# Token addresses (Gnosis mainnet defaults)
BRLA_ADDRESS=0xfecb3f7c54e2caae9dc6ac9060a822d47e053760
USDC_ADDRESS=0xDDAfbb505ad214D7b80b1f830fcCc89B60fb7A83
BRLA_DECIMALS=18
USDC_DECIMALS=6

# Monitor
POLL_INTERVAL_MS=3000               # How often to poll for on-chain events
AUTO_FILL=true                      # Automatically fill deposited orders

# CEX adapter (optional — uses mock prices if not set)
# BINANCE_API_KEY=
# BINANCE_API_SECRET=
